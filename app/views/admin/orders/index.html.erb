<h2>訂單列表</h2>

<table class="table table-borderd">
  <thead>
    <tr>
      <th>#</th>
      <th>生成表單</th>
      <th>訂購者</th>
      <th>訂購狀態</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <th>
          <%= link_to(order.id, admin_order_path(order)) %>
        </th>
        <th>
          <%= order.created_at.to_s(:long) %>
        </th>
        <th>
          <%= order.user.email %>
        </th>
        <th>
          <%= order.aasm_state %>
        </th>
      </tr>
    <% end %>  
  </tbody>
</table>